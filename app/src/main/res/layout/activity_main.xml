<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:gravity="center">

    <!-- Lottie Animation for Logo -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLogo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="131dp"
        android:foregroundGravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/resqlink_logo" />


    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_below="@id/lottieLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instant Health Alerts. Trusted Connections."
        android:textAlignment="center"
        android:textColor="#263238"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Copyright -->
    <TextView
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2025 ResQLink. All rights reserved."
        android:textAlignment="center"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        android:paddingBottom="16dp" />

</RelativeLayout>
